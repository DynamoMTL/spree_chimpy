<% @subscriber ||= Spree::Chimpy::Subscriber.new %>
<%= form_for @subscriber do |f| %>
  <div>
    <h2><%= t "spree.chimpy.subscribe_to_our_newsletter" %></h2>
    <%= f.label :email, t("spree.chimpy.stay_informed") %>
    <%= f.email_field :email, placeholder: t("spree.chimpy.enter_your_email") %>
    <%= f.submit %>
  </div>
<% end %>